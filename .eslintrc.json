{
  "root": true,
  "extends": [
    "strict",
    "standard",
    "standard-react",
    "plugin:unicorn/recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "plugins": [
    "json",
    "no-loops",
    "unicorn",
    "import"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true,
      "impliedStrict": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "$": true,
    "React": true,
    "ReactDOM": true
  },
  "rules": {
    "no-loops/no-loops": 1,
    "id-blacklist": 0,
    "no-sync": 0,
    "id-match": 0,
    "no-process-env": 0,
    "id-length": 0,
    "filenames/match-regex": 0,
    "global-require":0,
    "array-bracket-spacing":[2,"never"],
    "no-console":1,
    "no-underscore-dangle":0,
    "func-style":[2,"declaration", { "allowArrowFunctions": true }]
  },
  "settings": {
    "import/extensions": [".js", ".jsx"],
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"]
      }
    }
  }
}