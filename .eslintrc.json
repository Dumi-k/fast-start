{
  "root": true,
  "extends": [
    "standard",
    "standard-react",
    "standard-latest",
    "plugin:unicorn/recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "plugins": [
    "json",
    "no-loops",
    "unicorn",
    "import"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "$": true,
    "React": true,
    "ReactDOM": true
  },
  "rules": {
    "no-loops/no-loops": 2
  }
}