{
  "root": true,
  "extends": [
    "eslint:recommended",
    "standard",
    "standard-latest",
    "plugin:react/recommended",
    "standard-react",
    "plugin:unicorn/recommended",
    "plugin:flowtype/recommended",
    "standard-jsdoc"
  ],
  "plugins": [
    "html",
    "json",
    "no-loops",
    "unicorn",
    "typelint"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "gulp":true,
    "$": true,
    "jQuery":true,
    "React": true,
    "ReactDOM": true
  },
  "rules": {
    "no-loops/no-loops": 1,
    "unicorn/filename-case": 0,
    "jsx-quotes":[2,"prefer-double"],
    "no-console": [1],
    "typelint/typelint": [2]
  }
}
