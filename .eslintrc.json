{
  "extends": ["standard", "plugin:react/recommended"],
  "plugins": [
    "standard",
    "promise",
    "json",
    "react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "spaced-comment": ["error", "always", {
      "markers": ["=require", "=include"]
    }]
  }
}