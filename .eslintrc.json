{
  "root": true,
  "extends": [
    "eslint:recommended",
    "standard",
    "standard-latest",
	"plugin:react/recommended",
    "standard-react",
    "plugin:unicorn/recommended"
  ],
  "plugins": [
    "json",
    "no-loops",
    "unicorn"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "$": true,
    "React": true,
    "ReactDOM": true
  },
  "rules": {
    "no-loops/no-loops": 1,
    "unicorn/filename-case": 0
  }
}
