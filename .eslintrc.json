{
  "root": true,
  "extends": [
    "standard",
    "standard-react",
    "standard-latest",
    "plugin:unicorn/recommended",
    "plugin:import/recommended"
  ],
  "plugins": [
    "json",
    "no-loops",
    "unicorn",
    "import"
  ],
  "parserOptions": {
    "sourceType": "script",
    "ecmaVersion":7,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true,
      "impliedStrict":true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "$": true,
    "React": true,
    "ReactDOM": true
  },
  "rules": {
    "no-loops/no-loops": 2
  },
  "settings": {
    "import/extensions": [".js", ".jsx"],
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx",".es6",".babel"]
      }
    }
  }
}